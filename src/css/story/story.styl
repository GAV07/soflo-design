/* CUSTOM STORY STYLE */
body 
    background-color $off-white
    text-align left

    h1
        font-size 3.5em
        margin 0
        font-family $playfair

    p 
        font-family $lato

    h2 
        font-size 3em

a
    strong
        color $red
        text-decoration none


.section
    padding 2em 15em 1em 15em
    color $dark-blue

    &__charts
        display flex
        flex-wrap wrap
        justify-content center

    .outer-frame
        background-color white
        border-radius 1em
        position relative
        max-width 40vw
        width 600px
        height 600px
        max-height 50vh
        margin 1em 1em 1em 1em
        padding 5rem 4rem 2rem 2rem
        box-shadow 0 12.5px 10px rgba(0, 0, 0, 0.035), 0 100px 80px rgba(0, 0, 0, 0.07)
    
    .inner-frame
        width 100%
        height 100%
    
    svg
        overflow visible

        .bar
            fill $dark-blue

        .bar-labels
            color white
            text-anchor start

        .vPercentages, .hPercentages, .hLabels
            font-family lato
            font-size .85em
            fill $off-white
            text-anchor middle
            alignment-baseline middle

        .hLabels
            text-anchor start
            alignment-baseline middle

    .chart-title
        position absolute
        top 1.5rem
        left 0
        margin 0
        text-align center
        width 100%

    .domain
        opacity 0

